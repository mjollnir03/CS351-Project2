<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
</head>
<body>

<h2>Cart</h2>
<ul>
    <% cart.forEach(item => { %>
        <li><%= item[0] %> - $<%= item[1] %></li>
    <% }); %>
</ul>

<h1>Shipping Information</h1>

    <label for="name">Name:</label><br>
    <input type="text" id="name" name="name" required><br><br>

    <label for="email">Email:</label><br>
    <input type="email" id="email" name="email" required><br><br>

    <label for="address">Address:</label><br>
    <textarea id="address" name="address" required></textarea><br><br>

    <label for="phone">Phone Number:</label><br>
    <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" required><br><br>

    <button type="submit">Submit</button>
<h1>Shipping Options</h1>

    <input type="radio" id="overnight" name="shipping" value="overnight">
    <label for="overnight">Overnight Shipping ($100.00)</label><br>

    <input type="radio" id="twoday" name="shipping" value="twoday">
    <label for="twoday">2-Day Shipping ($50.00)</label><br>

    <input type="radio" id="ground" name="shipping" value="ground">
    <label for="ground">Ground Shipping ($20.00)</label><br>




<h1>Clear Cart</h1>
<form action="/clearCart" method="GET">
    <button type="submit">Clear Cart</button>
</form>

<h1>Remove an Item</h1>
<form action="/removeFromCart" method="GET">
    <button type="submit">Remove an Item</button>
</form>

<title>Place Order</title>
<script>
    function placeOrder() {
        // Change the text of the button to display the thank you message
        document.getElementById("orderButton").innerHTML = "Thank you for your order! Your order will be shipped soon.";
    }
</script>


<h1>Place Order</h1>
<button id="orderButton" onclick="placeOrder()">Place Order</button>

</body>
</html>
