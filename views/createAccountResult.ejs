<!-- createAccount.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account Result</title>
    <style>
        body {
            background-color: #F2EFE5;
            font-family: Constantia, "Lucida Bright", "DejaVu Serif", Georgia, serif;
        }
    </style>
</head>
<body>
<% if (success === true) { %>
    <h1><%= message %></h1>
        <h1>You will be logged into this account for the duration of your shopping!</h1>
        <h2>Redirecting you to the home page ...</h2>
    <script>
        setTimeout(function() {
            window.location.href = '/shop.html';
        }, 5000); // 5000 milliseconds = 5 seconds
    </script>
<% } else { %>
    <h1><%= message %></h1>
        <h2>Redirecting you to the account page ...</h2>
    <!-- Redirect to login page -->
    <script>
        setTimeout(function() {
            window.location.href = '/account.html';
        }, 5000); // 5000 milliseconds = 5 seconds
    </script>
<% } %>
</body>
</html>

